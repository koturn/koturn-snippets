snippet if-test
  if test ${1}; then
    ${0:TARGET}
  fi

snippet while-index
  ${1:i}=${2:0}
  while [ "$$1" -lt ${3:#:nLoop} ]; do
    ${0:TARGET}
    $1=\`expr "$$1" + 1\`
  done

snippet if-bash
  if [[ ${1} ]]; then
    ${0:TAREGT}
  fi

snippet for-bash
  declare -i ${1:i}
  for (($1 = ${2:0}; $1 < ${3}; $1++)) {
    ${0:TARGET}
  }
